{
  "name": "awesome-react-starter",
  "version": "1.0.0",
  "description": "Awesome react starter kit",
  "main": "index.js",
  "scripts": {
    "build": "webpack --watch",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/server.js",
    "test": "jest ./src",
    "clean": "rimraf dist node_modules",
    "watch": "npm-watch"
  },
  "watch": {
    "build": "src/",
    "start" : "node ./dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Surendhar95/awesome-react-starter.git"
  },
  "author": "Surendhar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Surendhar95/awesome-react-starter/issues"
  },
  "homepage": "https://github.com/Surendhar95/awesome-react-starter#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "html-webpack-plugin": "^3.0.6",
    "jest": "^22.4.2",
    "nodemon": "^1.17.1",
    "npm-watch": "^0.3.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "express": "^4.16.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.10"
  }
}
